@model Softlock_Solutions.Models.EmployeeWorkLife
@{
    ViewData["Title"] = "AddWorkLife";
}

<h1>Add WorkLife Record</h1>
<form method="post" class="text-center p-3 mb-2 bg-dark text-white">
 <div class="border p-3">
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="EmployeeNumber"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="EmployeeNumber" class="form-control" />
                        <span asp-validation-for="EmployeeNumber" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="OverTime"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="OverTime" class="form-control" />
                        <span asp-validation-for="OverTime" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TotalWorkingYears"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TotalWorkingYears" class="form-control" />
                        <span asp-validation-for="TotalWorkingYears" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TrainingTimesLastYear"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="TrainingTimesLastYear" class="form-control" />
                        <span asp-validation-for="TrainingTimesLastYear" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="WorkLifeBalance"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="WorkLifeBalance" class="form-control summernote"></textarea>
                        <span asp-validation-for="WorkLifeBalance" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="YearsAtCompany"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="YearsAtCompany" class="form-control summernote"></textarea>
                        <span asp-validation-for="YearsAtCompany" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="YearsInCurrentRole"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="YearsInCurrentRole" class="form-control summernote"></textarea>
                        <span asp-validation-for="YearsInCurrentRole" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="YearsSinceLastPromotion"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="YearsSinceLastPromotion" class="form-control summernote"></textarea>
                        <span asp-validation-for="YearsSinceLastPromotion" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="YearsWithCurrManager"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="YearsWithCurrManager" class="form-control summernote"></textarea>
                        <span asp-validation-for="YearsWithCurrManager" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">


                            <input type="submit" class="btn btn-info w-100" value="Update" />


                        </div>
                        <div class="col">
                            <a asp-action="WorkLife" asp-controller="Home" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
