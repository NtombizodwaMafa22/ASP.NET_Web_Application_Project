@model Softlock_Solutions.Models.Employee
@{
    ViewData["Title"] = "EmployeeDataEdit";
}

<h1>Employee Data Edit</h1>
<form method="post" class="text-center p-3 mb-2 bg-dark text-white">
    @if (Model.EmployeeNumber != 0)
    {
        <input asp-for="EmployeeNumber" hidden />
    }
    <div class="border p-3">
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Age"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Age" class="form-control" />
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DailyRate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DailyRate" class="form-control" />
                        <span asp-validation-for="DailyRate" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Department"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Department" class="form-control" />
                        <span asp-validation-for="Department" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Education"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Education" class="form-control summernote"></textarea>
                        <span asp-validation-for="Education" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="EducationField"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="EducationField" class="form-control summernote"></textarea>
                        <span asp-validation-for="EducationField" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Gender"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Gender" class="form-control summernote"></textarea>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="MaritalStatus"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="MaritalStatus" class="form-control summernote"></textarea>
                        <span asp-validation-for="MaritalStatus" class="text-danger"></span>
                    </div>

                </div>
               
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.EmployeeNumber != 0)
                            {
                                //update
                                <input type="submit" class="btn btn-info w-100 fas fa-thumbs-up" value="Update" />
                            }

                        </div>
                        <div class="col">
                            <a asp-action="EmployeeData" asp-controller="Home" class="btn btn-success w-100 fas fa-backward"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
