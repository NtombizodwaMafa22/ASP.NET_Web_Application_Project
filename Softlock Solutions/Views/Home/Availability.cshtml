@model IEnumerable<Softlock_Solutions.Models.AvailabilityOfEmployee>
@{
    ViewData["Title"] = "Availability";
}

<div class="row justify-content-around">
    <div><h1>Availability Of Employees</h1></div>
    <a asp-action="AddAvailability" asp-controller="Home"><i class="fas fa-plus-circle fa-3x"></i></a>
</div>
<div class="text-center p-3 mb-2 bg-dark text-white">

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped text-white" style="width:100%; height:300px">
            <thead>
                <tr>
                    <th>Employee Number</th>
                    <th>Attrition</th>
                    <th>Business Travelling</th>
                    <th>Distance From Home</th>
                    <th>Environment Satisfication</th>
                    <th>Over 18</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="20%">@obj.EmployeeNumber</td>
                        <td width="30%">@obj.Attrition</td>
                        <td width="30%">@obj.BusinessTravel</td>
                        <td width="30%">@obj.DistanceFromHome</td>
                        <td width="30%">@obj.EnvironmentSatisfaction</td>
                        <td width="30%">@obj.Over18</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Home" asp-route-Id="@obj.EmployeeNumber" asp-action="AvailabilityEdit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>
                                    
                                </a>
                                <a asp-controller="Home" asp-route-Id="@obj.EmployeeNumber" asp-action="AvailabilityDelete" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt"></i>
                                    
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Information.</p>
    }

</div>
