@model IEnumerable<Employee>
@{
    ViewData["Title"] = "searchEmployeeData";
}

<h1>Employee Data Record</h1>
<div class="container p-3 text-center p-3 mb-2 bg-dark text-white">

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped text-white" style="width:100%">
            <thead>
                <tr>

                    <th>Employee Number</th>
                    <th>Age</th>
                    <th>Daily Rate</th>
                    <th>Department</th>
                    <th>Education</th>
                    <th>Educational Field</th>
                    <th>Gender</th>
                    <th>Marital Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="20%">@obj.EmployeeNumber</td>
                        <td width="30%">@obj.Age</td>
                        <td width="30%">@obj.DailyRate</td>
                        <td width="30%">@obj.Department</td>
                        <td width="30%">@obj.Education</td>
                        <td width="30%">@obj.EducationField</td>
                        <td width="30%">@obj.Gender</td>
                        <td width="30%">@obj.MaritalStatus</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Home" asp-route-Id="@obj.EmployeeNumber" asp-action="EmployeeDataEdit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>

                                </a>
                                <a asp-controller="Home" asp-route-Id="@obj.EmployeeNumber" asp-action="EmployeeDataDelete" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt"></i>

                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Information.</p>
    }

</div>
