@model IEnumerable<Perfomance>
@{
    ViewData["Title"] = "searchPerfomance";
}

<h1>Employee Perfomance Record</h1>
<div class="container p-3 text-center p-3 mb-2 bg-dark text-white">

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped text-white" style="width:100%">
            <thead>
                <tr>
                    <th>Employee Number</th>
                    <th>Monthly income</th>
                    <th>Monthly rate</th>
                    <th>Number Of Companies Worked </th>
                    <th>Percentage Salary Hike</th>
                    <th>Perfomance rating</th>
                    <th>Relationship Satisfication</th>
                    <th>Standard hours</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="20%">@obj.EmployeeNumber</td>
                        <td width="30%">@obj.MonthlyIncome</td>
                        <td width="30%">@obj.MonthlyRate</td>
                        <td width="30%">@obj.NumCompaniesWorked</td>
                        <td width="30%">@obj.PercentSalaryHike</td>
                        <td width="30%">@obj.PerformanceRating</td>
                        <td width="30%">@obj.RelationshipSatisfaction</td>
                        <td width="30%">@obj.StandardHours</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Home" asp-route-Id="@obj.EmployeeNumber" asp-action="PerfomanceEdit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>

                                </a>
                                <a asp-controller="Home" asp-route-Id="@obj.EmployeeNumber" asp-action="PerfomanceDelete" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt"></i>

                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Information.</p>
    }

</div>
