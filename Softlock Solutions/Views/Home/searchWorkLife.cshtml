@model IEnumerable<EmployeeWorkLife>
@{
    ViewData["Title"] = "search";
}

<h1>Search Employee Number</h1>
<div class="container p-3 text-center p-3 mb-2 bg-dark text-white">

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped text-white" style="width:100%;height:400px">
            <thead>
                <tr>
                    <th>Employee Number</th>
                    <th>Overtime</th>
                    <th>Total Working Years</th>
                    <th>Work Life Balance</th>
                    <th>Years At Company</th>
                    <th>Years In Current Role</th>
                    <th>Years Since Last Promotion</th>
                    <th>Years With Current Manager</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="20%">@obj.EmployeeNumber</td>
                        <td width="30%">@obj.OverTime</td>
                        <td width="30%">@obj.TotalWorkingYears</td>
                        <td width="30%">@obj.TrainingTimesLastYear</td>
                        <td width="30%">@obj.WorkLifeBalance</td>
                        <td width="30%">@obj.YearsAtCompany</td>
                        <td width="30%">@obj.YearsInCurrentRole</td>
                        <td width="30%">@obj.YearsSinceLastPromotion</td>
                        <td width="30%">@obj.YearsWithCurrManager</td>

                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Home" asp-route-Id="@obj.EmployeeNumber" asp-action="WorklifeEdit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i>

                                </a>
                                <a asp-controller="Home" asp-route-Id="@obj.EmployeeNumber" asp-action="WorklifeDelete" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt"></i>

                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Information.</p>
    }

</div>
