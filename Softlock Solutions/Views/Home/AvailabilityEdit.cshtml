@model Softlock_Solutions.Models.AvailabilityOfEmployee
@{
    ViewData["Title"] = "AvailabilityEdit";
}

<h1>Availability Edit</h1>
<form method="post" class="text-center p-3 mb-2 bg-dark text-white">
    @if (Model.EmployeeNumber != 0)
    {
        <input asp-for="EmployeeNumber" hidden />
    }
    <div class="border p-3">
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Attrition"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Attrition" class="form-control" />
                        <span asp-validation-for="Attrition" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="BusinessTravel"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="BusinessTravel" class="form-control" />
                        <span asp-validation-for="BusinessTravel" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="DistanceFromHome"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DistanceFromHome" class="form-control" />
                        <span asp-validation-for="DistanceFromHome" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="EnvironmentSatisfaction"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="EnvironmentSatisfaction" class="form-control summernote"></textarea>
                        <span asp-validation-for="EnvironmentSatisfaction" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Over18"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Over18" class="form-control summernote"></textarea>
                        <span asp-validation-for="Over18" class="text-danger"></span>
                    </div>

                </div>
             
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            @if (Model.EmployeeNumber != 0)
                            {
                                //update
                                <input type="submit" class="btn btn-info w-100 fas fa-thumbs-up" value="Update" />
                            }

                        </div>
                        <div class="col">
                            <a asp-action="Availability" asp-controller="Home" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>
